<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lpf.refreshpage.ui.fragment.RefreshGridViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/beginRefreshing"
        style="@style/BtnOrangeStyle"
        android:text="BeginRefreshing" />

    <TextView
        android:id="@+id/beginLoadingMore"
        style="@style/BtnOrangeStyle"
        android:text="BeginLoadingMore" />

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_gridview_refresh"
